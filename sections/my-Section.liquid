<h1 style="text-align: {{ section.settings.title_alignment }}">{{ section.settings.adnanTitle }}</h1>

{% for block in section.blocks %}
    {% if block.type == "promotion" %}
        <h3>{{ block.settings.title }}</h3>
        {{ block.settings.image |  image_url: width: 500 | image_tag }}
        
    {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Promotion Group",
  "tag": "section",
  "class": "my-wrapper-class",
  "settings": [
    {
      "type": "text",
      "id": "adnanTitle",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title Alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "name": "Promotion",
      "type": "promotion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotion Group"
    }
  ]
}
{% endschema %}
